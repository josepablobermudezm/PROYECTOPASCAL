program CALCULADORA BEGIN      Uses crt;       var Integer NUM1, NUM2, RESULTADO;      function  SUMAR (N1,N2: Integer ):Integer;           var Integer RESULTADO;      BEGIN          RESULTADO :=  N1+N2;        SUMAR:=  RESULTADO;    END;       function  RESTAR (N1,N2: Integer ):Integer;      var Integer RESULTADO;      BEGIN          RESULTADO :=  N1-N2;        RESTAR:=  RESULTADO;    END;       function  MULTIPLICAR (N1,N2: Integer ):Integer;       var Integer  RESULTADO;    BEGIN          RESULTADO :=  N1*N2;        MULTIPLICAR:=  RESULTADO;    END;       function  DIVIDIR (N1,N2: Integer ):Integer;      var real  RESULTADO;    BEGIN          RESULTADO :=  N1/N2;        DIVIDIR:=  RESULTADO;    END;        BEGIN          { AQUí COMIENZA EL  }          var Integer  VARIABLE;        repeat              clrscr;              writeLn ('DIGITE LOS NúMEROS A CALCULAR:  ');            readLn  (NUM1);            readLn  (NUM2);            writeLn ( '1) SUMAR'  );            writeLn ( '2) RESTAR'  );            writeLn ( '3) MULTIPLICAR'  );            writeLn ( '4) DIVIDIR'  );            writeLn ( '5) SALIR'  );            readLn  (VARIABLE);            case  VARIABLE  of                   1: BEGIN                      writeLn ('EL RESULTADO DE LA SUMA ES: ' +   SUMAR  (NUM1,NUM2));                END;                  2: BEGIN                      writeLn ('EL RESULTADO DE LA RESTA ES: ' +   RESTAR  (NUM1,NUM2));                END;                  3: BEGIN                      writeLn ('EL RESULTADO DE LA MULTIPLICACIóN ES: ' +   MULTIPLICAR  (NUM1,NUM2));                END;                  4: BEGIN                      writeLn ('EL RESULTADO DE LA DIVISIóN ES: ' +   DIVIDIR  (NUM1,NUM2));                END;                  repeat until key pressed;                        until (VARIABLE =  5)    END   END.  